<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.buildNewList.BuildNewListFragment">

    <LinearLayout
        android:id="@+id/ll_new_list_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:text="x"
            android:textSize="20sp"
            android:background="#00F6F4F4"
            android:gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="建立新清單"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="0.1"
            android:textColor="#B1AEAE"/>
    </LinearLayout>
<View
    android:id="@+id/guideline1"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"
    app:layout_constraintTop_toBottomOf="@+id/ll_new_list_title"
    app:layout_constraintBottom_toTopOf="@id/textView2"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintTop_toBottomOf="@+id/ll_new_list_title" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="請輸入清單標題"
        android:textColor="#DADADA"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/ll_new_list_title" />

    <View
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/editText"/>

</androidx.constraintlayout.widget.ConstraintLayout>
